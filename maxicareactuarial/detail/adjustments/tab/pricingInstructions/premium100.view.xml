<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		controllerName="maxicareactuarial.detail.adjustments.tab.pricingInstructions.premium100" 
		xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox class="sapUiSmallMargin">
		<Panel expandable="true" expanded="true" id="idPremiumPanel" 
				width="auto" class="custom-panel-bottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Premium"/>
				</Toolbar>
			</headerToolbar>
			<f:Form id="idPremiumForm" editable="true">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="3"
						emptySpanL="3"
						emptySpanM="3"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement>
								<RadioButton groupName="PremiumGroupA" text="Uniform Rates">
									<layoutData>
										<l:GridData indent="XL2 L2 M2 S0" span="XL4 L4 M4 S6" />
									</layoutData>
								</RadioButton>
								<RadioButton groupName="PremiumGroupA" text="Separate Rates">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S6" />
									</layoutData>
								</RadioButton>
							</f:FormElement>
							<f:FormElement>
								<RadioButton groupName="PremiumGroupB" text="Separate Rates for IP and OP">
									<layoutData>
										<l:GridData indent="XL2 L2 M2 S0" span="XL4 L4 M4 S6" />
									</layoutData>
								</RadioButton>
								<RadioButton groupName="PremiumGroupB" text="Same Rate for IP and OP">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S6" />
									</layoutData>
								</RadioButton>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</Panel>
		<Panel expandable="true" expanded="true" id="idModalFactorPanel" 
				width="auto" class="custom-panel-bottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Modal Factor"/>
				</Toolbar>
			</headerToolbar>
			<f:Form id="idModalFactorForm" editable="true">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="3"
						emptySpanL="3"
						emptySpanM="3"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement>
								<RadioButton groupName="ModalFactorGroupA" text="Applicable">
									<layoutData>
										<l:GridData indent="XL3 L3 M3 S0" span="XL3 L3 M3 S6" />
									</layoutData>
								</RadioButton>
								<RadioButton groupName="ModalFactorGroupA" text="Waived">
									<layoutData>
										<l:GridData span="XL3 L3 M3 S6" />
									</layoutData>
								</RadioButton>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</Panel>
	</VBox>
</core:View>