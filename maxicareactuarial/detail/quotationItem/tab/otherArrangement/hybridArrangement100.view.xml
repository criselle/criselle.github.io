<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form" controllerName="maxicareactuarial.detail.quotationItem.tab.otherArrangement.hybridArrangement100"
		xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox class="sapUiSmallMargin">
		<Panel id="idHybridArrangementPanel" width="auto" class="custom-panel-bottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Hybrid Arrangement"/>
				</Toolbar>
			</headerToolbar>
			<f:Form id="HybridArrangementForm" editable="true">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="3"
						emptySpanL="3"
						emptySpanM="3"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Applicable">
								<Switch id="idApplicableHASwitch" state="false" customTextOn="Yes"
										customTextOff="No" change="onChangeApplicableHA">
									<layoutData>
										<l:GridData span="XL6 L6 M6 S12" />
										<FlexItemData growFactor="1" />
									</layoutData>
								</Switch>
							</f:FormElement>
							<f:FormElement label="">
								<f:fields>
									<RadioButton id="idMaxLossRatioRadio" groupName="hybridRadioA"
												text="Maximum Loss Ratio" select="onPressMaxLossRatio">
										<layoutData>
											<l:GridData span="XL3 L3 M3 S6" />
										</layoutData>
									</RadioButton>
									<Input value="" id="idMaxLossRatioInpt">
										<layoutData>
											<l:GridData span="XL3 L3 M3 S6" />
										</layoutData>
									</Input>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="">
								<f:fields>
									<RadioButton id="idMaxAmountRadio" groupName="hybridRadioA"
												text="Maximum Amount" select="onPressMaxAmount">
										<layoutData>
											<l:GridData span="XL3 L3 M3 S6" />
										</layoutData>
									</RadioButton>
									<Input value="" id="idMaxAmountInpt">
										<layoutData>
											<l:GridData span="XL3 L3 M3 S6" />
										</layoutData>
									</Input>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</Panel>
	</VBox>
</core:View>